@using Model;

  

@using Model;
@model List<CMRC_Reviews>
@{
    
    Layout = null;
}

@if (Model.Count() > 0)
{
    <table id="ReviewList_MyList" cellspacing="0" cellpadding="0" style="width:500px;border-collapse:collapse;">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span class="NormalBold">@item.CustomerName</span>
                        <span class="Normal">says... </span><img src="/Content/ReviewRating@(item.Rating).gif">
                        <br>
                        <span class="Normal">@Html.Raw(item.Comments)</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

