@{ 
    var list = ViewBag.list as List<Model.CMRC_Products>;

}
<input type="hidden" id="cid" value="@ViewBag.cid" />

<table height="100%" align="left" cellspacing="0" cellpadding="0" width="100%" border="0">
    <tr valign="top">
        <td nowrap>
            <br>
            <table id="MyList" cellspacing="0" border="0" style="border-collapse:collapse;width:800px">

                @foreach (var item in list)
                {

                    <td style="float:left;">
                        <table border="0" width="300">
                            <tr>
                                <td width="25">
                                    &nbsp
                                </td>
                                <td width="100" valign="middle" align="right">
                                    <a href='#'>
                                        <img src='/images/@item.ProductImage' width="100" height="75" border="0">
                                    </a>
                                </td>
                                <td width="200" valign="middle">
                                    <a href='@Url.Action("details",new {id= item.ProductID})'>
                                        <span class="ProductListHead">
                                            @item.ModelName
                                        </span>
                                        <br>
                                    </a>
                                    <span class="ProductListItem">
                                        <b>价格： </b>
                                        ￥@item.UnitCost
                                    </span>
                                    <br>
                                    <a href='#'>
                                        <span class="ProductListItem">
                                            <font color="#9D0000"><b>添加到购物车<b></font>
                                        </span>
                                    </a>
                                </td>
                            </tr>
                        </table>
                    </td>

                }

            </table>
        </td>
    </tr>
</table>

@Session scripts{
<script>
    $(function () {

        $("#"+@ViewBag.cid).removeClass().addClass("Menuselected").parent().css({ "background-color": "#9D0000" });
    });

</script>
}

